    background: #eaf6ff;
    color: #007bff;
    box-shadow: 0 4px 16px #6be7ff22;
    transform: translateY(-2px) scale(1.04);
  }
  .help-modal-links a i {
    z-index: 1;
    position: relative;
    animation: iconBounce 1.2s infinite alternate;
  }
  @keyframes iconBounce {
    0% { transform: translateY(0); }
    100% { transform: translateY(-4px) scale(1.12); }
  }
  /* Animated Book Now button */
  .animated-book-form {
    position: absolute;
    bottom: 1rem;
    left: 1rem;
    right: 1rem;
    display: flex;
    justify-content: center;
    pointer-events: all;
    z-index: 2;
  }
  .btn-animated-book, .pay-btn {
    position: relative;
    overflow: hidden;
    border-radius: 1.2rem !important;
    font-weight: 600 !important;
    font-size: 1.08rem !important;
    box-shadow: 0 2px 8px #fe424d22;
    margin-bottom: 0.3em;
    margin-top: 0.2em;
    padding: 0.8rem 1.2rem !important;
    transition: background 0.2s, box-shadow 0.2s, transform 0.18s;
    animation: popIn 0.7s cubic-bezier(0.23,1,0.32,1);
  }
  .btn-animated-book:active, .pay-btn:active {
    animation: btnBounce 0.3s;
  }
  @keyframes btnBounce {
    0% { transform: scale(1); }
    40% { transform: scale(0.92); }
    100% { transform: scale(1.04); }
  }
  /* Ripple effect */
  .ripple {
    position: absolute;
    border-radius: 50%;
    transform: scale(0);
    animation: ripple 0.6s linear;
    background-color: rgba(255,255,255,0.5);
    pointer-events: none;
    z-index: 10;
  }
  @keyframes ripple {
    to {
      transform: scale(2.5);
      opacity: 0;
    }
  }
  .btn-animated-book .btn-loader {
    display: block;
    border: 3px solid #fff;
    border-top: 3px solid #fe424d;
    border-radius: 50%;
    width: 1.7em;
    height: 1.7em;
    position: absolute;
    left: 50%;
    top: 100%;
    margin-left: -0.85em;
    margin-top: -0.85em;
    animation: spin 0.8s linear infinite;
    z-index: 3;
    background: transparent;
  }
  .btn-animated-book:not(.loading) .btn-loader {
    display: none;
  }
  /* Payment Modal Animation */
  .payment-modal {
    animation: fadeIn 0.4s cubic-bezier(0.23,1,0.32,1);
  }
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  /* Help & Care Center styles */
  .help-modal-animated-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(8px);
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.4s ease;
  }
  .help-modal-animated-bg.show {
    opacity: 1;
    pointer-events: all;
  }
  .listing-actions-row {
    display: flex;
    gap: 0.7em;
    margin-top: 1.1em;
    margin-bottom: 0.2em;
  }
  .listing-actions-row form,
  .listing-actions-row .pay-btn {
    flex: 1 1 0;
    min-width: 0;
  }
  @media (max-width: 600px) {
    .listing-actions-row {
      flex-direction: column;
      gap: 0.5em;
    }
  }
</style>

