<style>
/* Responsive Navbar Styles */
@media (max-width: 991.98px) {
  .navbar-nav {
    flex-direction: column !important;
    align-items: flex-start !important;
    width: 100%;
    margin-top: 1rem;
  }
  .navbar-collapse {
    background: #fff;
    border-radius: 0 0 1rem 1rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    padding: 1rem;
  }
  .search-inp {
    width: 100%;
    margin-bottom: 0.5rem;
  }
  .search-btn {
    width: 100%;
  }
  .navbar-nav .nav-link {
    margin-bottom: 0.5rem;
  }
}

.navbar {
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  background: linear-gradient(90deg, #fff 60%, #ffe5e7 100%) !important;
  border-bottom: 2px solid #fe424d22;
}

.navbar-brand {
  font-weight: bold;
  font-size: 1.7rem;
  color: #fe424d !important;
  letter-spacing: 1px;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  text-shadow: 1px 1px 0 #fff, 2px 2px 4px #fe424d22;
}

.navbar-toggler {
  border: none;
  outline: none;
  box-shadow: none;
}

.nav-link {
  font-weight: 500;
  margin-right: 1rem;
  transition: color 0.2s, background 0.2s, border-radius 0.2s;
  border-radius: 20px;
  padding: 0.5rem 1rem;
}

.nav-link:hover, .nav-link.active {
  color: #fff !important;
  background: #fe424d;
  text-shadow: none;
}

.search-btn {
  background-color: #fe424d;
  color: #fff;
  border-radius: 25px;
  padding: 0 1.2rem 0 1.2rem;
  border: none;
  transition: background 0.2s, box-shadow 0.2s;
  box-shadow: 0 2px 8px #fe424d22;
}

.search-btn:hover {
  background-color: #d7373f;
  color: #fff;
  box-shadow: 0 4px 16px #fe424d33;
}

.search-inp {
  border-radius: 25px;
  padding: 0.5rem 3rem 0.5rem 3rem;
  font-size: 1rem;
  border: 1px solid #fe424d44;
  box-shadow: 0 1px 4px #fe424d11;
  transition: border 0.2s, box-shadow 0.2s;
}

.search-inp:focus {
  border: 1.5px solid #fe424d;
  outline: none;
  box-shadow: 0 2px 8px #fe424d22;
}

@media (max-width: 575.98px) {
  .navbar-brand {
    font-size: 1.2rem;
  }
  .search-inp {
    padding: 0.5rem 1.5rem 0.5rem 1.5rem;
    font-size: 0.95rem;
  }
  .search-btn {
    font-size: 0.95rem;
    padding: 0 0.7rem 0 0.7rem;
  }
}
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand d-flex align-items-center" href="/listings">
      <i class="fa-regular fa-compass me-2"></i> WonderLust
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav me-auto mb-2 mb-md-0">
        <a class="nav-link" href="/listings">Explore</a>
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
      </div>
      <form class="d-flex me-3 my-2 my-md-0" role="search" method="GET" action="/listings">
        <input class="form-control me-2 search-inp" name="q" type="search" placeholder="Search destinations" />
        <button class="btn search-btn" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i> Search
        </button>
      </form>
      <div class="navbar-nav">
        <% if(!currUser) { %>
          <a class="nav-link" href="/signup"><b>Signup</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %>
        <% if(currUser) { %>
          <a class="nav-link" href="/logout"><b>Logout</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>