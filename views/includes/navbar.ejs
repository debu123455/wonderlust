<style>
/* Light, pastel colorful navbar with search outside and fully responsive */
.navbar {
  background: linear-gradient(90deg, #fffbe7 0%, #e0f7fa 50%, #ffe5f7 100%) !important;
  box-shadow: 0 4px 24px #e0e7ff33, 0 1.5px 8px #ffe5f733;
  border-bottom: 2px solid #e0e7ff;
  border-radius: 0 0 1.5rem 1.5rem;
  transition: box-shadow 0.3s;
}

.navbar-brand {
  font-weight: bold;
  font-size: 1.8rem;
  background: linear-gradient(90deg, #6a82fb 10%, #fe424d 40%, #ffb86b 70%, #00c9a7 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: 2px;
  display: flex;
  align-items: center;
  gap: 1.1rem; /* Increased gap for logo and text */
  text-shadow: 1px 1px 0 #fff, 2px 2px 8px #ffe5f7;
  transition: transform 0.18s;
  padding-left: 0.2rem;
}

.navbar-brand:hover {
  transform: scale(1.06) rotate(-2deg);
  text-shadow: 0 2px 12px #ffb86b55;
}

.navbar-brand i {
  font-size: 2.2rem;
  display: inline-block;
  vertical-align: middle;
  filter: drop-shadow(0 2px 8px #ffb86b55);
  background: linear-gradient(135deg, #ffb86b 10%, #fe424d 60%, #6a82fb 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.navbar-brand span {
  font-size: 1.8rem;
  font-weight: bold;
  letter-spacing: 2.5px;
  line-height: 1.1;
  margin-left: 0.1rem;
}

.navbar-toggler {
  border: none;
  outline: none;
  box-shadow: none;
  background: #fffbe7;
  border-radius: 1rem;
}

.nav-link {
  font-weight: 500;
  margin-right: 1.1rem;
  border-radius: 22px;
  padding: 0.5rem 1.1rem;
  position: relative;
  color: #6a82fb !important;
  background: linear-gradient(90deg, #e0f7fa 60%, #ffe5f7 100%);
  transition: color 0.2s, background 0.2s, border-radius 0.2s, transform 0.18s;
}

.nav-link:hover, .nav-link.active {
  color: #fff !important;
  background: linear-gradient(90deg, #ffb86b 60%, #fe424d 100%);
  text-shadow: none;
  transform: translateY(-2px) scale(1.04);
  box-shadow: 0 2px 8px #ffb86b22;
}

/* Responsive image and text for navbar */
.navbar-brand {
  font-size: 1.7rem;
  /* ...existing code... */
}
.navbar-brand span {
  font-size: 1.7rem;
  font-weight: bold;
  letter-spacing: 2px;
  line-height: 1.1;
}
.navbar-brand i {
  font-size: 2rem;
  display: inline-block;
  vertical-align: middle;
}
@media (max-width: 991.98px) {
  .navbar-brand {
    font-size: 1.3rem;
    gap: 0.7rem;
  }
  .navbar-brand span {
    font-size: 1.3rem;
  }
  .navbar-brand i {
    font-size: 1.5rem;
  }
}
@media (max-width: 575.98px) {
  .navbar-brand {
    font-size: 1.1rem;
    gap: 0.4rem;
  }
  .navbar-brand span {
    font-size: 1.1rem;
  }
  .navbar-brand i {
    font-size: 1.1rem;
  }
}

@media (max-width: 991.98px) {
  .navbar-nav {
    flex-direction: column !important;
    align-items: flex-start !important;
    width: 100%;
    margin-top: 1rem;
  }
  .navbar-collapse {
    background: #fffbe7;
    border-radius: 0 0 1rem 1rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    padding: 1rem;
  }
  .navbar-nav .nav-link {
    margin-bottom: 0.5rem;
  }
}
@media (max-width: 700px) {
  .search-bar-wrap {
    flex-direction: column;
    align-items: stretch;
    gap: 0.5rem;
    width: 98vw;
    max-width: 98vw;
  }
  .search-inp, .search-btn {
    width: 100%;
    min-width: 0;
    margin-left: 0 !important;
  }
  .search-btn {
    margin-top: 0.2rem;
  }
  .search-icon-inp {
    left: 14px;
    top: 18px;
    font-size: 1.1rem;
  }
}
@media (max-width: 575.98px) {
  .navbar-brand {
    font-size: 1.1rem;
  }
  .search-bar-wrap {
    width: 100vw;
    max-width: 100vw;
    padding: 0 0.5rem;
  }
  .search-inp {
    padding: 0.5rem 1.2rem 0.5rem 2rem;
    font-size: 0.95rem;
  }
  .search-btn {
    font-size: 0.95rem;
    padding: 0.45rem 0.7rem;
    margin-left: 0;
  }
}
.user-avatar {
  width: 34px;
  height: 34px;
  border-radius: 50%;
  object-fit: cover;
  border: 2px solid #ffe5f7;
  margin-left: 0.5rem;
  box-shadow: 0 1px 4px #ffe5f722;
  background: #fff;
}
.user-icon {
  font-size: 1.5rem;
  color: #fe424d;
  margin-left: 0.5rem;
  background: #fff;
  border-radius: 50%;
  padding: 0.2rem;
  box-shadow: 0 1px 4px #ffe5f722;
}
.search-inp {
    border-radius: 25px;
    padding: 0.5rem 2.2rem 0.5rem 2.2rem;
    font-size: 1.05rem;
    border: 2px solid #6a82fb;
    box-shadow: 0 2px 8px #6a82fb22;
    background: linear-gradient(90deg, #fffbe7 60%, #e0f7fa 100%);
    color: #333;
    font-weight: 500;
    transition: border 0.2s, box-shadow 0.2s, background 0.2s;
    width: 160px;
    min-width: 0;
    outline: none;
    animation: fadeInDown 0.7s;
  }
  .search-inp:focus {
    border: 2.5px solid #fe424d;
    background: #fffbe7;
    box-shadow: 0 4px 16px #fe424d22;
  }
  .form-select {
    border-radius: 25px;
    padding: 0.5rem 1.2rem;
    font-size: 1.05rem;
    border: 2px solid #ffb86b;
    background: linear-gradient(90deg, #ffe5f7 60%, #e0f7fa 100%);
    color: #fe424d;
    font-weight: 500;
    transition: border 0.2s, box-shadow 0.2s, background 0.2s;
    outline: none;
    animation: fadeInDown 0.7s 0.1s;
  }
  .form-select:focus {
    border: 2.5px solid #6a82fb;
    background: #fffbe7;
    box-shadow: 0 4px 16px #6a82fb22;
  }
  .search-btn {
    background: linear-gradient(90deg, #6a82fb 60%, #fe424d 100%);
    color: #fff;
    border-radius: 25px;
    padding: 0.5rem 1.2rem;
    border: none;
    font-weight: 600;
    box-shadow: 0 2px 8px #6a82fb22;
    transition: background 0.2s, box-shadow 0.2s, transform 0.18s;
    animation: fadeInDown 0.7s 0.2s;
  }
  .search-btn:hover {
    background: linear-gradient(90deg, #fe424d 60%, #6a82fb 100%);
    color: #fff;
    box-shadow: 0 4px 16px #fe424d33;
    transform: translateY(-2px) scale(1.04);
  }
  @keyframes fadeInDown {
    0% { opacity: 0; transform: translateY(-20px); }
    100% { opacity: 1; transform: translateY(0); }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand d-flex align-items-center" href="/listings">
      <i class="fa-regular fa-compass me-2"></i>
      <span>WonderLust</span>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav me-auto mb-2 mb-md-0">
        <a class="nav-link" href="/listings">Explore</a>
        <a class="nav-link" href="/listings/new">Add Your Hotel</a>
      </div>
      <div class="navbar-nav align-items-center">
        <% if(!currUser) { %>
          <a class="nav-link" href="/signup"><b>Signup</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %>
        <% if(currUser) { %>
          <a class="nav-link" href="/logout"><b>Logout</b></a>
          <% if(currUser.avatarUrl) { %>
            <img src="<%= currUser.avatarUrl %>" alt="User" class="user-avatar" />
          <% } else { %>
            <span class="user-icon"><i class="fa-regular fa-user"></i></span>
          <% } %>
        <% } %>
        <!-- Search and Sort in Navbar -->
        <form class="d-flex align-items-center ms-3" role="search" method="GET" action="/listings" style="gap:0.5rem;">
          <input class="form-control search-inp" name="q" type="search" placeholder="Search destinations" style="width:160px;padding-left:2.2rem;" value="<%= typeof query !== 'undefined' && query.q ? query.q : '' %>" />
          <select name="sort" class="form-select" style="width:auto;display:inline-block;" onchange="this.form.submit()">
            <option value="">Sort by</option>
            <option value="price_asc" <%= (typeof query !== 'undefined' && query.sort === 'price_asc') ? 'selected' : '' %>>Price: Low to High</option>
            <option value="price_desc" <%= (typeof query !== 'undefined' && query.sort === 'price_desc') ? 'selected' : '' %>>Price: High to Low</option>
          </select>
          <button class="btn search-btn ms-2" type="submit">Search</button>
        </form>
      </div>
    </div>
  </div>
</nav>